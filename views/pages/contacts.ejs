<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2 class="text-success">Daftar Contact</h2>
    </div>
    <div class="col-md-2">
      <a href="/add-contact" class="btn btn-success btn-sm mb-2">
        Tambah Data Contact
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <% if (msg.length !==0) { %>
        <div class="alert alert-success" role="alert">
          <%= msg %>
        </div>
        <% } %>
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nama</th>
                <th scope="col">No HP</th>
                <th scope="col">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% if (contacts.length===0) { %>
                <tr>
                  <td colspan="4">
                    <div class="alert alert-danger fw-bold" role="alert">
                      Data contact belum ada !!!
                    </div>
                  </td>
                </tr>
                <% } %>
                  <% contacts.forEach((contact, i)=> { i++ %>
                    <tr>
                      <th scope="row">
                        <%= i++ %>
                      </th>
                      <td>
                        <%= contact.nama %>
                      </td>
                      <td>
                        <%= contact.nohp %>
                      </td>
                      <td>
                        <a href="/contact/<%= contact.nama %> " class="btn btn-primary badge rounded-pill">
                          <i class="bi bi-info-circle"></i> detail
                        </a>
                      </td>
                    </tr>
                    <% }) %>
            </tbody>
          </table>
    </div>
  </div>
</div>