<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2 class="text-primary">Detail Contact</h2>
      <% if (!contact) { %>
        <div class="alert alert-danger fw-bold" role="alert">
          Data contact belum ada !!!
          <br />
          <a href="/contact" class="card-link fw-normal">
            &laquo; Kembali ke daftar contact
          </a>
        </div>
        <% } else { %>
          <div class="card" style="width: 18rem">
            <div class="card-body">
              <h5 class="card-title">
                <%= contact.nama %>
              </h5>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= contact.nohp %>
              </h6>
              <p class="card-text">
                <%= contact.email %>
              </p>
              <a href="/edit-contact/<%= contact.nama %>" class="btn btn-secondary badge">
                ubah
              </a>
              <form action="/contact?_method=DELETE" method="post" class="d-inline">
                <input type="hidden" name="nama" value="<%= contact.nama %>">
                <button type="submit" class="btn btn-danger badge" onclick="return confirm('Yakin !')">hapus</button>
              </form>
              <a href="/contact" class="btn btn-outline-primary btn-sm d-block mt-3">
                &laquo; Kembali ke daftar contact
              </a>
            </div>
          </div>
          <% } %>
    </div>
  </div>
</div>